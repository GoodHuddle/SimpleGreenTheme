<!DOCTYPE html>
<html>

<head>
    {{#section "head"}}
        <meta charset="utf-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>{{#section "title"}}{{huddle.name}}{{/section}}</title>

        <!-- Bootstrap -->
        <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet"/>
        <link href="/resources/font-awesome-4.2.0/css/font-awesome.min.css" rel="stylesheet"/>
        <link href="/resources/css/style.css" rel="stylesheet"/>

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    {{/section}}
</head>

<body>

<div class="top-bar">
    <div class="container">
    </div>
</div>

<div class="header">
    <div class="container">
        <div>
            <h1>{{huddle.name}}</h1>
        </div>
    </div>
</div>

<div class="main-nav">

    <div class="container">

        <!-- Main nav menu -->
        <div class="navbar" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">

                    {{#each menu.items}}
                        {{#if items}}
                            <li class="nav-item {{#if selected}}active{{/if}} dropdown">
                                <a href="{{url}}" class="dropdown-toggle" data-hover="dropdown" data-delay="0" data-close-others="false">
                                    {{label}} <span class="caret"></span>
                                </a>

                                <ul class="dropdown-menu" role="menu">
                                    {{#each items}}
                                        <li>
                                            <a href="{{url}}">{{label}}</a>
                                        </li>
                                    {{/each}}
                                </ul>
                            </li>
                        {{else}}
                            <li class="nav-item {{#if selected}}active{{/if}}">
                                <a href="{{url}}">{{label}}</a>
                            </li>
                        {{/if}}
                    {{/each}}

                </ul>

            </div>
        </div>

    </div>
</div>

<div class="container body-content">
    {{#section "content"}}
        No page content
    {{/section}}
</div>


<footer class="footer">
    <div class="footer-content">
        <div class="container">
            <div class="row">
                <div class="footer-col  col-md-12 text-center col-sm-8 newsletter">
                    <div class="footer-col-inner">
                        <h3>Join our mailing list</h3>
                        <p>Subscribe to get our weekly newsletter delivered directly to your inbox</p>
                        <form class="subscribe-form" action="/member/join" method="POST">
                            <div class="form-group">
                                <input type="email" name="email" class="form-control" placeholder="Enter your email">
                            </div>
                            <input class="btn btn-theme btn-subscribe" type="submit" value="Subscribe">
                        </form>

                    </div><!--//footer-col-inner-->
                </div><!--//foooter-col-->
            </div>
        </div>
    </div><!--//footer-content-->
    <div class="bottom-bar">
        <div class="container">
            <div class="row text-center">
                <small class="copyright col-md-12 col-sm-12 col-xs-12">
                    Powered by <a href="https://goodhuddle.com">GoodHuddle</a>
                </small>
            </div><!--//row-->
        </div><!--//container-->
    </div><!--//bottom-bar-->
</footer>


{{#section "scripts"}}
    <script src="/lib/jquery-1.11.1/jquery-1.11.1.min.js"></script>
    <script src="/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="/resources/js/bootstrap-hover-dropdown.min.js"></script>
{{/section}}

</body>
</html>

